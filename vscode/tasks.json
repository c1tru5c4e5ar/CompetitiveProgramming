{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "${relativeFile}",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },

        {
            "label": "run",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
            "group": "none"
        },

        {
            
            "label": "build+run",
            "type": "shell",
            "key": "f6",
            "command": "g++",
            "args": [
                "-Wall",
                "${relativeFile}",
                "-o",
                "${fileBasenameNoExtension}",
                ";",
                "./${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}